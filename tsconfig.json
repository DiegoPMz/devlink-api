{
  "compilerOptions": {
    /* base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    // "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "moduleDetection": "force",

    /* transpiling with node */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    /* strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    /* aliases routes */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
